# =============================================
# DISCORD BOT KONFIGURATION
# =============================================

# Discord Bot Token (Von https://discord.com/developers/applications)
DISCORD_BOT_TOKEN=dein_discord_bot_token_hier

# Erlaubte Discord User IDs (Komma-getrennt)
ALLOWED_USER_IDS=123456789012345678,987654321098765432

# Auto-Update Intervall in Minuten
AUTO_UPDATE_INTERVAL=10


# =============================================
# CLOUDFLARE KONFIGURATION
# =============================================

# Cloudflare API Token (Von https://dash.cloudflare.com/profile/api-tokens)
# Benötigte Berechtigungen: Zone.Zone Read, Zone.DNS Edit
CF_API_TOKEN=dein_cloudflare_api_token_hier

# Cloudflare Zone ID (In der Cloudflare Dashboard Overview zu finden)
CF_ZONE_ID=deine_cloudflare_zone_id_hier


# =============================================
# MYSQL DATENBANK KONFIGURATION
# =============================================

# MySQL Host
MYSQL_HOST=localhost

# MySQL Port
MYSQL_PORT=3306

# MySQL Benutzername
MYSQL_USER=ddns_user

# MySQL Passwort
MYSQL_PASSWORD=ddns_password

# MySQL Datenbank Name
MYSQL_DATABASE=ddns_bot


# =============================================
# WEB CONTROL PANEL KONFIGURATION
# =============================================

# Web Interface Benutzername
WEB_USERNAME=admin

# Web Interface Passwort
WEB_PASSWORD=dein_sicheres_web_passwort_hier

# Web Interface Port
WEB_PORT=5000

# Web Interface Host (0.0.0.0 für externen Zugriff)
WEB_HOST=0.0.0.0

# Flask Secret Key (Für Session Management)
FLASK_SECRET_KEY=dein_geheimer_flask_schluessel_hier_mit_mindestens_32_zeichen


# =============================================
# CERTBOT SSL ZERTIFIKATE KONFIGURATION
# =============================================

# Certbot E-Mail für Zertifikatsbenachrichtigungen
CERTBOT_EMAIL=deine-email@example.com

# Domains für SSL-Zertifikate (Komma-getrennt)
CERTBOT_DOMAINS=example.com,www.example.com,subdomain.example.com


# =============================================
# ERWEITERTE KONFIGURATION (Optional)
# =============================================

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Auto-Update aktivieren (true/false)
ENABLE_AUTO_UPDATE=true

# Web Interface aktivieren (true/false)
ENABLE_WEB_INTERFACE=true

# MySQL SSL Mode (Optional, für externe Datenbanken)
# MYSQL_SSL_MODE=REQUIRED

# MySQL SSL Zertifikat Pfad (Optional)
# MYSQL_SSL_CA=/pfad/zu/ca.pem
# MYSQL_SSL_CERT=/pfad/zu/client-cert.pem
# MYSQL_SSL_KEY=/pfad/zu/client-key.pem

# Proxy Einstellungen (Optional, falls hinter Proxy)
# HTTP_PROXY=http://proxy-server:port
# HTTPS_PROXY=https://proxy-server:port

# IP Ermittlung Services (Optional, falls Standard-APIs nicht funktionieren)
# IPV4_API=https://api.ipify.org
# IPV6_API=https://api64.ipify.org